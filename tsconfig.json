{
    "compilerOptions": {
      "noEmit": true,
      "pretty": true,
      "module": "commonjs",
      "target": "es6",
      "baseUrl": "./",
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "strict": true,
      "jsx": "react",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "paths": {
        "@/*": ["src/*"]
    },
    },
    "include": [
      "src",
      "**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "webpack",
      "scripts"
    ]
  }
  